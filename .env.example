# ========================================
# SIM SMA BIMA - Environment Configuration
# ========================================
#
# INSTRUCTIONS:
# 1. Copy this file to .env in the same directory
# 2. Fill in your actual values
# 3. DO NOT commit .env file to Git (it's in .gitignore)
#
# ========================================

# ========================================
# DJANGO SETTINGS
# ========================================

# Environment: development, production, testing
DJANGO_SETTINGS_MODULE=config.settings.development

# Secret Key (MUST be changed in production)
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION-123456789

# Debug Mode (set to False in production)
DEBUG=True

# Allowed Hosts (comma-separated, no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL Database
DB_ENGINE=django.db.backends.postgresql
DB_NAME=sim_sma_bima_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# ========================================
# CORS SETTINGS
# ========================================

# Allowed Origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# ========================================
# MEDIA & STATIC FILES
# ========================================

# Media files path (user uploads)
MEDIA_ROOT=/path/to/media
MEDIA_URL=/media/

# Static files path (CSS, JS, images)
STATIC_ROOT=/path/to/staticfiles
STATIC_URL=/static/

# ========================================
# EMAIL CONFIGURATION
# ========================================

# Email Backend (console for development, smtp for production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Settings (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@simsma.com

# ========================================
# STREAMLIT CONFIGURATION
# ========================================

# Streamlit Server Port
STREAMLIT_PORT=8501

# API Base URL (for Streamlit to connect to Django)
API_BASE_URL=http://localhost:8000/api

# ========================================
# MACHINE LEARNING SETTINGS
# ========================================

# ML Models Directory
ML_MODELS_DIR=ml/models/saved_models

# Model Version
ML_MODEL_VERSION=v1.0

# ========================================
# SECURITY SETTINGS (Production Only)
# ========================================

# Session Cookie Age (in seconds, default: 2 weeks)
SESSION_COOKIE_AGE=1209600

# CSRF Settings
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False

# HTTPS Redirect (set to True in production)
SECURE_SSL_REDIRECT=False

# ========================================
# LOGGING SETTINGS
# ========================================

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log File Path
LOG_FILE_PATH=logs/django.log

# ========================================
# ADDITIONAL SETTINGS
# ========================================

# Timezone
TIME_ZONE=Asia/Jakarta

# Language Code
LANGUAGE_CODE=id-ID

# Pagination
PAGE_SIZE=20

# File Upload Size Limit (in MB)
MAX_UPLOAD_SIZE=5
